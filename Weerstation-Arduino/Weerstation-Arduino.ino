void setup() {
  Serial.begin(115200);
  dht.begin();
  bmp.begin();
  display.begin(SSD1306_SWITCHCAPVCC, 0x3C);
  delay(2000);
  display.clearDisplay();
  display.setTextColor(WHITE);
  display.display();

}

void loop() {
  //haalt de data op
